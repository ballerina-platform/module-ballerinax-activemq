<FindBugsFilter>
    <!-- System.exit is intentional for fatal errors in error callback -->
    <Match>
        <Class name="io.ballerina.lib.activemq.listener.OnErrorCallback"/>
        <Bug pattern="DM_EXIT"/>
    </Match>

    <!-- JMS objects (Session, MessageConsumer) cannot be cloned - false positive -->
    <Match>
        <Class name="io.ballerina.lib.activemq.listener.MessageReceiver"/>
        <Field name="session"/>
        <Bug pattern="EI_EXPOSE_REP2"/>
    </Match>
    <Match>
        <Class name="io.ballerina.lib.activemq.listener.MessageReceiver"/>
        <Field name="consumer"/>
        <Bug pattern="EI_EXPOSE_REP2"/>
    </Match>

    <!-- ConnectionConfig is a record - expose internal representation is by design -->
    <Match>
        <Class name="io.ballerina.lib.activemq.listener.ConnectionConfig"/>
        <Method name="properties"/>
        <Bug pattern="EI_EXPOSE_REP"/>
    </Match>
    <Match>
        <Class name="io.ballerina.lib.activemq.listener.ConnectionConfig"/>
        <Method name="secureSocket"/>
        <Bug pattern="EI_EXPOSE_REP"/>
    </Match>
    <Match>
        <Class name="io.ballerina.lib.activemq.listener.ConnectionConfig"/>
        <Method name="&lt;init&gt;"/>
        <Bug pattern="EI_EXPOSE_REP2"/>
    </Match>

    <!-- Service needs to return internal BObject for Ballerina runtime -->
    <Match>
        <Class name="io.ballerina.lib.activemq.listener.Service"/>
        <Method name="getConsumerService"/>
        <Bug pattern="EI_EXPOSE_REP"/>
    </Match>
</FindBugsFilter>